<div class="row">
  <div class="small-4 large-centered columns">
    <h1 class='changeme text-center'>New Product</h1>
    <%= form_for(@product) do |f| %>
    <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field">
      <%= f.label :name, class: 'changeme' %><br />
      <%= f.text_field :name, placeholder: 'Full Name of Product' %>
    </div>
    <div class = "field">
      <%= f.label :description, class: 'changeme' %><br />
      <%= f.text_area :description, placeholder: 'Describe Me!' %>
    </div>
    <div class = "field">
      <%= f.label :price_in_cents, class: 'changeme' %><br />
      <%= f.number_field :price_in_cents, placeholder: 'Enter Price In Pennies' %>
    </div>
    <div class = "actions">
      <%= submit_tag 'Create Product', class: 'button expand round radius' %>
    </div>
    <% end %>
    <%= link_to 'Back', products_path, class: 'button expand round radius alert' %>
  </div>
</div>