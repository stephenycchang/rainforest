<nav class="top-bar" data-topbar>
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "Rainforest", root_path %></h1>
    </li>
    <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <li class="name"><%= link_to 'Add item', new_product_path %></li>
      <li class="has-dropdown">
        <% if current_user %>
        <a>Signed in as <%= current_user.name %></a>
        <ul class="dropdown">
          <li></li> 
          <li><%= link_to "Log out", session_path("current"), :method => :delete %></li>
          <% else %>
          <li><%= link_to "Log in", new_session_path %></li>
          <li><%= link_to "Sign up", new_user_path %></li>
          <% end %>
        </ul>
      </li>
    </ul>

    <!-- Left Nav Section -->
    <ul class="right">
      <li class="has-form">
        <div class="row collapse">
          <div >
            <%= form_tag products_path, method: :get, authentication: false, role: 'search', id: 'search-form' do %>
            <li><%= text_field_tag :search, params[:search], placeholder: 'Find me' %></li>
          </div>
          <div>
            <li><%= submit_tag "Search" , class: 'button expand' %></li>
            <% end %>
          </div>
        </div>
      </li>
    </ul>
  </section>
</nav>



